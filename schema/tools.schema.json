{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-atlas.local/schema/tools.schema.json",
  "title": "AI Atlas Tools Catalog",
  "type": "array",
  "description": "Top-level array of category objects.",
  "minItems": 1,
  "items": {
    "type": "object",
    "required": ["name", "slug", "description", "tools"],
    "additionalProperties": false,
    "properties": {
      "name": {"type": "string", "minLength": 1},
      "slug": {"type": "string", "pattern": "^[a-z0-9-]+$"},
      "description": {"type": "string", "minLength": 1},
      "icon": {"type": ["string", "null"], "description": "Inline SVG or URL. Optional."},
      "tools": {
        "type": "array",
        "minItems": 0,
        "items": { "$ref": "#/$defs/tool" }
      }
    }
  },
  "$defs": {
    "tool": {
      "type": "object",
      "required": ["name", "description", "link"],
      "additionalProperties": false,
      "properties": {
        "name": {"type": "string", "minLength": 1},
        "description": {"type": "string", "minLength": 1},
        "link": {"type": "string", "format": "uri"},
        "tags": {
          "type": "array",
            "items": {"type": "string", "minLength": 1},
            "uniqueItems": true,
            "maxItems": 25
        },
        "iconUrl": {"type": "string", "format": "uri"},
        "about": {"type": "string"},
        "pros": {
          "type": "array",
          "items": {"type": "string", "minLength": 2},
          "maxItems": 15
        },
        "cons": {
          "type": "array",
          "items": {"type": "string", "minLength": 2},
          "maxItems": 15
        }
      }
    }
  }
}
