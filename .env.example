# Copy this file to .env and fill in your details
# These are used by discovery/email/admin scripts locally and in CI

# SMTP (optional for discovery email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=your-app-password
TO_EMAIL=you@example.com

# Firestore / Approvals (optional)
FIREBASE_SERVICE_ACCOUNT_JSON=
ADMIN_APPROVAL_SIGNING_KEY=
GITHUB_REPO=
GITHUB_TOKEN=
APPROVAL_BASE_URL=

# Safety (optional)
GOOGLE_SAFEBROWSING_API_KEY=
RELIABILITY_STRICT=false

# Discovery global overrides (optional)
DISCOVERY_TRENDING_GH_STARS_MIN=1000
DISCOVERY_TRENDING_GH_RECENT_DAYS=60
DISCOVERY_TRENDING_NPM_DL_MIN=5000
DISCOVERY_TRENDING_HN_POINTS_MIN=200
DISCOVERY_TRENDING_HN_RECENT_DAYS=14
DISCOVERY_PAGE_FRESHNESS_MAX_DAYS=90
DISCOVERY_GITHUB_SEARCH_RECENT_DAYS=180

# Per-domain examples (override globals)
# Slug: video-tools -> VIDEO_TOOLS, design-tools -> DESIGN_TOOLS, etc.
DISCOVERY_VIDEO_TOOLS_AIXPLORIA_STRICT=hard
DISCOVERY_DESIGN_TOOLS_AIXPLORIA_STRICT=hard
DISCOVERY_CODE_ASSISTANCE_GITHUB_STARS_MIN=1200
DISCOVERY_VIDEO_TOOLS_AIXPLORIA_SIZE=40
